<%- include("../layout/header", {title: title}) %>
<div class="container mx-auto" style="width: 23%;">
  <h1 class="text-warning text-center"><%= title %></h1>

  <% if (messages) { %>
    <% for (let message of messages) { %>
      <div class="alert alert-warning" role="alert">
        <%= message %>
      </div>
    <% } %>
  <% } %>

  <form action="/login" method="post">
    <div class="mb-3">
      <label for="emailInput" class="form-label" style="color: #ff6f3c;">Email</label>
      <input style="background: rgba(255,255,255,0.5)" type="email" class="form-control" name="email" id="emailInput" value="<%= old ? old.email : '' %>" placeholder="example@gmail.com" required>
    </div>
    <div class="mb-3">
      <label for="passwordInput" class="form-label" style="color: #ff6f3c;">Password</label>
      <input style="background: rgba(255,255,255,0.5)" type="password" class="form-control" name="password" id="passwordInput" value="" placeholder="******" required>
    </div>
    <div class="d-flex justify-content-center"><button type="submit" class="btn btn-outline-warning"><i class="bi bi-check-circle"></i> Log In</button></div>
  </form>
</div>
<%- include("../layout/footer") %>