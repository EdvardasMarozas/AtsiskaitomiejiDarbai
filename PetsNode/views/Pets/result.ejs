<%- include("../layout/header") %>
<div class="container">
  <div>
    <h1 class="text-center">Pet Wars</h1>
  </div>

  <p>
    <a class="btn btn-outline-warning" href="/petwars/create">
      <i class="bi bi-plus-circle"></i> Add your pet</a
    >
  </p>
  <p>
    <a class="btn btn-outline-warning" href="/petwars/pets"> Pet list</a>
  </p>
  <p>
    <a class="btn btn-outline-warning" href="/petwars/adminpanel"
      >Update & Delete</a
    >
  </p>
  <div class="result">
    <div class="d-flex justify-content-center gap-5">
        <h2>Results</h2>
      <div class="pr-5">
        <form action="/petwars/" method="post">
            <input type="hidden" name="_method" value="PUT">
            <a href="/petwars/pets/<%=  %>"><img src="images/<%= pet1.image%>" style="height: 300px" class="pr-5" /></a> 
          </form>
      </div>
      <div class="pl-5">
        <form action="/petwars/" method="post">
            <input type="hidden" name="_method" value="PUT">
            <a href="/petwars/pets/<%=  %>"><img src="images/<%= pet2.image%>" style="height: 300px" class="pr-5" /></a> 
          </form>
      </div>
      <p class="text-center"><%=  %> of people picked
        <br>
        <a href="/petwars/pets/<%=  %>"><%= pet1.name %></a> over <a href="/petwars/pets/<%=  %>"><%= pet2.name %>.</a>
     </p>
    </div>
    <h2 class="text-center">Next PetBattle!</h2>
  </div>
  <div class="text-center mb-5 fs-5">
    <%= pet1.name %><span> VS </span><%= pet2.name %>
  </div>
  <div class="d-flex justify-content-center gap-5">
    <div class="pr-5">
      <img src="images/<%= pet1.image%>" style="height: 300px" class="pr-5" />
    </div>
    <div class="pl-5">
      <img src="images/<%= pet2.image%>" style="height: 300px" class="mr-5" />
    </div>
  </div>

  <div class="text-center mt-5"><h2>Who looks more awesome?</h2></div>
  <div class="text-center">
    Can't decide <a href="/petwars/">refresh</a> the page for a draw
  </div>
</div>
<%- include("../layout/footer") %>
