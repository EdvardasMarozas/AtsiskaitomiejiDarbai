<%- include("../layout/header") %>
<a class="btn btn-outline-warning" href="/petwars"> GO BACK</a>
<h1 class="text-center" style="color: #ff9a3c;"><%= title %></h1>
<div class="container" style="column-width: 190px">
  <% for (let i = 0, a = 1; i < 11; i++, a++) { %>
  <div
    style="
      display: flex;
      flex-direction: column;
      break-inside: avoid;
      width: 71%;
    "
  > <%- pets[i].ID == pets[0].ID ? `<h2 class="text-center text-danger mt-5">PACIFIST</h2>` : '' %>
    <a style="width: 100%" href="/petwars/pets/<%= pets[i].ID %>">
      <img
        class="my-2 rounded"
        src="images/<%= pets[i].image%>"
        style="max-height: 150px"
      />
    </a>
    <a
      style="width: 100%; text-align: center; font-weight: 900"
      class="mb-1"
      href="/petwars/pets/<%= pets[i].ID %>"
      ><span style="color: black"><%= a %>.</span>
       <span style="color: #030637;"><%= pets[i].name %></a> </span>
       <p style="color: #FF9843; font-weight: 700; font-size: larger; text-align: center;">has tied <%= petTied[i].tiedprocent %>% of <%= totalBattles[i] %> battles.</p>
  </div>
  <% } %> <%- include("../layout/footer") %>
<%- include("../layout/footer") %>