<%- include("../layout/header", {title: title}) %>

<div class="container">

<h1 class="mb-5"><%= pet.name %></h1>
<h4>Added to the website on <%= created_at %></h4>

<div class="card" style="width: 15rem;">
    <img src="images/<%= pet.image%>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">Battle stats: (out of <%= %> battles)</h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Won:</li>
      <li class="list-group-item">Lost:</li>
      <li class="list-group-item">Drawn:</li>
    </ul>
    <div class="card-body">
      <a href="/petwars" class="card-link">Start a new battle</a>
    </div>
  </div>
</div>

<%- include("../layout/footer") %>